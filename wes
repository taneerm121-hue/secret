        <h1>Happy Valentine's Day! üíñ</h1>
        
        <div class="message">
            <div class="question">Will you be my Valentine? üíï</div>
            
            <div class="buttons-container">
                <button class="btn yes-btn" id="yesBtn">YES! üíñ</button>
                <button class="btn no-btn" id="noBtn">NO üôÅ</button>
            </div>
            
            <div class="final-message" id="finalMessage">
                Heheheheheheh thank you UGGO bss ab tou tumhari dherr saari treats done üíñ‚ôæÔ∏è
            </div>
            
            <div id="heartContainer"></div>
        </div>
        
        <div class="footer">
            Made with ‚ù§Ô∏è for my UGGO
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const finalMessage = document.getElementById('finalMessage');
            const heartContainer = document.getElementById('heartContainer');
            
            // Array of messages for NO button
            const noMessages = [
                "Please Uggo Maan Jao na",
                "Meri Uggo nae ho?",
                "Mithiye Please",
                "Bugrhi Please", 
                "CBTL pilau ga dher saari",
                "Lanzhou v dher saara"
            ];
            
            let clickCount = 0;
            let isFloating = false;
            
            // NO button click handler
            noBtn.addEventListener('click', function() {
                if (isFloating) return;
                
                // Change NO button text
                if (clickCount < noMessages.length) {
                    noBtn.textContent = noMessages[clickCount];
                    clickCount++;
                }
                
                // After 6 clicks, change back to NO and make it float
                if (clickCount === noMessages.length) {
                    setTimeout(() => {
                        noBtn.textContent = "NO üò¢";
                        
                        // Make button float and non-clickable
                        noBtn.classList.add('floating');
                        noBtn.disabled = true;
                        noBtn.style.cursor = 'default';
                        isFloating = true;
                        
                        // Detach from container
                        const rect = noBtn.getBoundingClientRect();
                        noBtn.style.position = 'fixed';
                        noBtn.style.left = `${rect.left}px`;
                        noBtn.style.top = `${rect.top}px`;
                    }, 300);
                }
            });
            
            // YES button click handler
            yesBtn.addEventListener('click', function() {
                // Show final message
                finalMessage.style.display = 'block';
                
                // Hide NO button
                noBtn.style.display = 'none';
                
                // Create heart animation
                heartContainer.innerHTML = '<div class="heart-animation">‚ù§Ô∏è ‚ôæÔ∏è</div>';
                
                // Change title
                document.querySelector('h1').textContent = "YAY! Thank You! üíñ";
                document.querySelector('h1').style.color = '#4caf50';
                
                // Create floating hearts
                for (let i = 0; i < 10; i++) {
                    setTimeout(() => {
                        createFloatingHeart();
                    }, i * 300);
                }
            });
            
            // Function to create floating hearts
            function createFloatingHeart() {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§Ô∏è';
                heart.style.position = 'fixed';
                heart.style.fontSize = Math.random() * 30 + 20 + 'px';
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.top = '100vh';
                heart.style.color = '#e91e63';
                heart.style.zIndex = '100';
                heart.style.opacity = '0.9';
                heart.style.pointerEvents = 'none';
                
                document.body.appendChild(heart);
                
                // Animate the heart
                const animation = heart.animate([
                    { transform: 'translateY(0) scale(1)', opacity: 0.9 },
                    { transform: `translateY(-${window.innerHeight + 100}px) scale(0.5)`, opacity: 0 }
                ], {
                    duration: Math.random() * 3000 + 3000,
                    easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)'
                });
                
                animation.onfinish = () => {
                    heart.remove();
                };
            }
            
            // Add some initial floating hearts
            for (let i = 0; i < 3; i++) {
                setTimeout(() => {
                    createFloatingHeart();
                }, i * 1000);
            }
        });
    </script>
